<body class="animated fadeInDown" id="body">

    @*<header id="header">

        <div id="logo-group">
            <span id="logo"> <img src="/img/logo.png" alt="SmartAdmin"> </span>
        </div>      

    </header>*@
    <header >
        <img src="/img/banner.png" alt="SmartAdmin" style="width:100%;">

    </header>

    @*<div id="main" role="main" style="padding-top:0px;min-height:400px;background:none">*@


        <div id="main" role="main">

            <!-- MAIN CONTENT -->
            <div id="content" class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="well no-padding">
                            <form action="/Authentication/Login" id="login-form" class="smart-form client-form" method="POST">
                                <header>ĐĂNG NHẬP HỆ THỐNG</header>
                                <fieldset>
                                    @if (Model.ErrMess != null)
                                    {
                                        @Html.Raw(Model.ErrMess)
                                    }
                                    @if (string.IsNullOrEmpty(Request.QueryString["RedirectUrl"]))
                                    {
                                        <input type="hidden" name="RedirectUrl">
                                    }
                                    else
                                    {
                                        <input type="hidden" name="RedirectUrl" value="@Request.QueryString["RedirectUrl"]">
                                    }
                                    <section>
                                        <label class="label">E-mail</label>
                                        <label class="input">
                                            <i class="icon-append fa fa-user"></i>
                                            <input type="email" name="Email">
                                            <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Xin mời nhập tài khoản email/tên đăng nhập</b>
                                        </label>
                                    </section>

                                    <section>
                                        <label class="label">Password</label>
                                        <label class="input">
                                            <i class="icon-append fa fa-lock"></i>
                                            <input type="password" name="Password">
                                            <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Mật khẩu của bạn</b>
                                        </label>
                                        @*<div class="note hide">
                                                <a href="forgotpassword.html">Forgot password?</a>
                                            </div>*@
                                    </section>

                                    @*<section>
                                            <label class="checkbox">
                                                <input type="checkbox" name="remember" checked="">
                                                <i></i>Stay signed in
                                            </label>
                                        </section>*@
                                </fieldset>
                                <footer>
                                    <button type="submit" class="btn btn-primary">
                                        Đăng nhập
                                    </button>
                                </footer>
                              
                            </form>

                        </div>

                        <div class="hide">
                            <h5 class="text-center"> - Or sign in using -</h5>

                            <ul class="list-inline text-center">
                                <li>
                                    <a href="javascript:void(0);" class="btn btn-primary btn-circle"><i class="fa fa-facebook"></i></a>
                                </li>
                                <li>
                                    <a href="javascript:void(0);" class="btn btn-info btn-circle"><i class="fa fa-twitter"></i></a>
                                </li>
                                <li>
                                    <a href="javascript:void(0);" class="btn btn-warning btn-circle"><i class="fa fa-linkedin"></i></a>
                                </li>
                            </ul>
                        </div>


                    </div>
                </div>
            </div>

        </div>
<div class="footer">
